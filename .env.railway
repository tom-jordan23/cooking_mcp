# Railway Family-Scale Environment Configuration
# Optimized for Railway deployment with managed services

# Application Configuration
ENVIRONMENT=production
SECRET_KEY=${{secrets.SECRET_KEY}}
JWT_SECRET_KEY=${{secrets.JWT_SECRET_KEY}}

# Railway automatically provides these
PORT=${{PORT}}
DATABASE_URL=${{DATABASE_URL}}
REDIS_URL=${{REDIS_URL}}

# External Service Credentials
SLACK_BOT_TOKEN=${{secrets.SLACK_BOT_TOKEN}}
SLACK_SIGNING_SECRET=${{secrets.SLACK_SIGNING_SECRET}}

TELEGRAM_BOT_TOKEN=${{secrets.TELEGRAM_BOT_TOKEN}}
TELEGRAM_CHAT_ID=${{secrets.TELEGRAM_CHAT_ID}}

TWILIO_ACCOUNT_SID=${{secrets.TWILIO_ACCOUNT_SID}}
TWILIO_AUTH_TOKEN=${{secrets.TWILIO_AUTH_TOKEN}}
TWILIO_FROM_SMS=${{secrets.TWILIO_FROM_SMS}}
TWILIO_FROM_WHATSAPP=${{secrets.TWILIO_FROM_WHATSAPP}}

MAILGUN_API_KEY=${{secrets.MAILGUN_API_KEY}}
MAILGUN_DOMAIN=${{secrets.MAILGUN_DOMAIN}}

WHATSAPP_TOKEN=${{secrets.WHATSAPP_TOKEN}}

# Optimizations for Railway
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Resource limits for Railway
MAX_WORKERS=2
WORKER_CONNECTIONS=1000