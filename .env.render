# Render Environment Configuration
# Copy this file and set the values in Render's dashboard

# Database (automatically configured by Render)
# DATABASE_URL=postgresql://user:password@hostname:5432/cooking_mcp

# Redis (automatically configured by Render)
# REDIS_URL=redis://hostname:6379/0

# Security (automatically generated by Render)
# SECRET_KEY=auto-generated-by-render
# JWT_SECRET_KEY=auto-generated-by-render

# Application settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
API_V1_STR=/api/v1
PROJECT_NAME=MCP Cooking Lab Notebook
BACKEND_CORS_ORIGINS=["*"]

# Git configuration
GIT_AUTHOR_NAME=Lab Bot
GIT_AUTHOR_EMAIL=lab@cooking-mcp.com

# Slack integration (REQUIRED - set in Render dashboard)
# SLACK_BOT_TOKEN=xoxb-your-bot-token-here
# SLACK_SIGNING_SECRET=your-signing-secret-here
# SLACK_APP_TOKEN=xapp-your-app-token-here (if using socket mode)

# Optional: Multi-channel notifications
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_CHAT_ID=your-chat-id

# Optional: SMS notifications via Twilio
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_FROM_NUMBER=+1234567890

# Optional: AI-powered insights
# OPENAI_API_KEY=sk-your-openai-api-key

# Optional: Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=your-email@gmail.com

# Optional: Monitoring and analytics
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# File upload limits
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,md

# Cache settings
ENABLE_RESPONSE_CACHING=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000