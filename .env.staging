# Staging Environment Configuration for MCP Cooking Lab Notebook

# Application Configuration
ENVIRONMENT=staging
SECRET_KEY=staging-secret-key-different-from-prod
JWT_SECRET_KEY=staging-jwt-secret-key-different-from-prod
DOMAIN=staging.cooking-mcp.example.com

# Database Configuration
POSTGRES_DB=cooking_mcp_staging
POSTGRES_USER=cooking_user_staging
POSTGRES_PASSWORD=staging-database-password
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://cooking_user_staging:staging-database-password@db:5432/cooking_mcp_staging

# Redis Configuration
REDIS_PASSWORD=staging-redis-password
REDIS_URL=redis://:staging-redis-password@redis:6379/1

# Application Ports
APP_PORT=8080

# SSL/TLS Configuration
ACME_EMAIL=staging-admin@example.com

# Monitoring Configuration
GRAFANA_PASSWORD=staging-grafana-password

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-staging-backup-bucket

# External Service Credentials (Use test/sandbox accounts)
SLACK_BOT_TOKEN=xoxb-staging-slack-bot-token
SLACK_SIGNING_SECRET=staging-slack-signing-secret

TELEGRAM_BOT_TOKEN=staging-telegram-bot-token
TELEGRAM_CHAT_ID=staging-telegram-chat-id

TWILIO_ACCOUNT_SID=staging-twilio-account-sid
TWILIO_AUTH_TOKEN=staging-twilio-auth-token
TWILIO_FROM_SMS=+1234567890
TWILIO_FROM_WHATSAPP=whatsapp:+1234567890

MAILGUN_API_KEY=staging-mailgun-api-key
MAILGUN_DOMAIN=staging.mailgun.domain

# Build Configuration
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=$(git rev-parse --short HEAD)
VERSION=staging